@model IEnumerable<Contacte.Models.Entities.Contact>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <br /><br />
    <p>
        <a asp-action="Create" asp-route-type="2" class="btn btn-sm btn-primary">Adauga contact</a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th width="16%">
                        @Html.DisplayName("Nume")
                    </th>
                    <th width="16%">
                        @Html.DisplayName("Prenume")
                    </th>
                    <th width="16%">
                        @Html.DisplayName("Nr telefon")
                    </th>
                    <th width="22%">
                        @Html.DisplayName("Email")
                    </th>
                    <th width="15%">
                        @Html.DisplayName("CNP")
                    </th>
                    <th width="15%"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CNP)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs btn-info">Detalii</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-info">Stergere</a>
                            </td>
                        </tr>
                    }
                }
                else 
                { 
                    <tr>
                        <td>Nu exista contacte</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>